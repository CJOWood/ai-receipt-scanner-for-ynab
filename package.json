{
  "name": "ynab-slip-uploader",
  "version": "0.0.1",
  "workspaces": ["./server", "./shared"],
  "scripts": {
    "dev:server": "cd server && bun run dev",
    "dev:shared": "cd shared && bun run dev",
    "dev": "concurrently \"bun run dev:shared\" \"bun run dev:server\"",
    "build:server": "cd server && bun run build",
    "build:shared": "cd shared && bun run build",
    "build": "bun run build:shared && bun run build:server",
    "postinstall": "bun run build:shared && bun run build:server"
  },
  "devDependencies": {
    "bun-types": "latest",
    "concurrently": "^9.1.2"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  }
}
